<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.obo.reverseview">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.layout.LayoutReverseActivity"
            android:label="@string/title_activity_layout_reverse"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.animate.AnimateReverseActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.surfaceView.SurfaceReverseActivity"
            android:label="@string/title_activity_surface_reverse"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.scale.ScaleActivity"></activity>
    </application>

</manifest>